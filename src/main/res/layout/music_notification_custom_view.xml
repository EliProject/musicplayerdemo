<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5DEB3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="336dp"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/notification_music_player_custom_icon"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_launcher" />


        <TextView
            android:id="@+id/notification_music_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="52dp"
            android:paddingRight="15dp"
            android:ellipsize="end"
            android:lines="1"
            android:hint="music title" />

        <ImageView
            android:id="@+id/delete_notify"
            android:src="@drawable/ic_shuffle_white_24dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <RelativeLayout
            android:id="@+id/notification_music_controller_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notification_media_prev"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="50dp"
                android:src="@drawable/ic_skip_previous_white_24dp" />


            <ImageView
                android:id="@+id/notification_media_play"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_play_arrow_white_24dp" />


            <ImageView
                android:id="@+id/notification_media_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="50dp"
                android:src="@drawable/ic_skip_next_white_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/notification_music_player_icon_ll"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/notification_media_icon21"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="80dp" />

            <ImageView
                android:id="@+id/notification_media_icon22"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="80dp" />

            <ImageView
                android:id="@+id/notification_media_icon31"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:src="@drawable/ic_skip_previous_white_24dp" />

            <ImageView
                android:id="@+id/notification_media_icon32"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_play_arrow_white_24dp" />

            <ImageView
                android:id="@+id/notification_media_icon33"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="50dp"
                android:src="@drawable/ic_skip_next_white_24dp" />

            <ImageView
                android:id="@+id/notification_media_more"
                android:src="@drawable/ic_skip_next_white_24dp"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>